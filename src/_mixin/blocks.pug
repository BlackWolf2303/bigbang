mixin section-mission
  .mission-content
    p.text-red Our Mission
    h1.text-red Science For People
    p.mission-text We, at the Fondation IPSEN, wish for all to discover and share scientific knowledge as new advances.
    +link('Discover Our Mission').abutton.button-primary.button-red
  .mission-images
    - var length = 6, n = 1;
    while length >= n 
      .mission-image.section-image-float.image-round
        - var imageURL = "../assets/images/mission-image-" + n + ".png";
        img(alt="", src=imageURL)
      - n++
  +link('Go Next').abutton.button-round.mission-next-button
    span.icon-arrow-down

