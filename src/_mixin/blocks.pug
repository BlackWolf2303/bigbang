      +title-secondary(title, titleHighlight).horizontal-line.live-from-lab-article-title
      +link('View All').link-arrow
      .card-wrapper
        .single-card-img
          if cardImageText
            h3.text-white=cardImageText
          +link(title, url)
            +img(title, imageUrl).img-fluid
        .single-card-body
          h3
            +link(subtitle, url)
          p.single-card-text=text
          +link('Read Article', url).link-arrow

